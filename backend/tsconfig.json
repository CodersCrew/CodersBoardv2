{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@coders-board-library/event-sourcing": [
        "libs/event-sourcing/src"
      ],
      "@coders-board-library/event-sourcing/*": [
        "libs/event-sourcing/src/*"
      ],
      "@coders-board-library/time-provider": [
        "libs/time-provider/src"
      ],
      "@coders-board-library/time-provider/*": [
        "libs/time-provider/src/*"
      ],
      "@coders-board-in-memory-transport/in-memory-transport": [
        "libs/in-memory-transport/src"
      ],
      "@coders-board-in-memory-transport/in-memory-transport/*": [
        "libs/in-memory-transport/src/*"
      ],
      "@coders-board-public-messages/public-messages": [
        "libs/public-messages/src"
      ],
      "@coders-board-public-messages/public-messages/*": [
        "libs/public-messages/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}